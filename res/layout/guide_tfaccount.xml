<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="微淘首页"
            android:textColor="#656565"
            android:textSize="@dimen/title_text_size" />

        <ImageButton
            android:id="@+id/tf_acount_central"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/title_btn_bg"
            android:src="@drawable/tf_acount_central" />

        <ImageButton
            android:id="@+id/tf_follow_account"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tf_acount_central"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/title_btn_bg"
            android:src="@drawable/tf_follow_account_icon" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="15dp"
        android:fadingEdge="none"
        android:listSelector="#00000000" >
      
    </ListView>

</LinearLayout>